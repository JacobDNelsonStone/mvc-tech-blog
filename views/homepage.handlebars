{{#each posts as |post| }}
<div class="flex-column flex-no-wrap col-xl-12 align-center">
  <div class="w-100">
    <div class="">
      <div class="card p-4 card-rounded">
        <div class="card card-header">
          <h2>Author: {{post.User.name}} </h2>
          <h2>{{post.post_title}} </h2>
        </div>
        <div class="card card-body card-rounded">
          <p>{{post.post_text}}</p>

        </div>
        <div class="card card-body card-rounded">
          <p>Posted On: {{post.post_date}}</p>
        </div>
        <div class="card card-footer">
          <h3><button data-id={{post.id}} class="btn btn-primary w-100 commentsTag">Show Comments</button></h3>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

<script src="/js/comment.js"></script>